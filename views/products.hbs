{{#if myProducts.length}}

  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 ">
    {{#each myProducts}}
      <div class="col ">
        <div class="card shadow-sm">
          <img src="{{image}}" alt="image" />
          <div class="card-body">
            <h2 class="card-text fw-bold">{{title}}</h2>
            <p class="card-text">{{description}}</p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="d-flex gap-2 align-items-center">
                <div class="avatar bg-primary">
                  <p>{{getFullNameFirstCharacter user.firstName user.lastName}}
                  </p>           
                </div>
                 <p class="p-0 m-0 fs-5">{{user.lastName}} {{user.firstName}}</p>
              </div>           
              <small class="text-muted fs-5">{{price}}$</small>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
 <section class="page_404 w-75 mx-auto">
   <div class="row">
    <div class="cpl-sm-12">
      <div class="vol-sm-10 col-sm-offset-1 text-center">
        <div class="four_zero_four_bg">
          <h1 class="text-center">404</h1>
        </div>
        <div class="contant_box_404">
          <h3 class="h2">
            Add new products
          </h3>
          <a href="/add" class="btn btn-primary btn-lg mb-5">Add products</a>
        </div>
      </div>
    </div>
   </div>
 </section>
{{/if}}